<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textView_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posizione attuale: N/D"
        app:layout_constraintBottom_toTopOf="@+id/button_toggle_service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_toggle_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Avvia condivisione"
        app:layout_constraintTop_toBottomOf="@+id/textView_location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_send_now"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Invia posizione ora"
        app:layout_constraintTop_toBottomOf="@+id/button_toggle_service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Spinner
        android:id="@+id/spinner_frequency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/frequency_options"
        app:layout_constraintTop_toBottomOf="@+id/button_send_now"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
